.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.exams-container {
  padding: 16rpx;
}

.exam-type-selector {
  margin-bottom: 16rpx;
}

.exams-list {
  margin-top: 16rpx;
}

.exam-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.exam-time {
  color: #0052d9;
  font-size: 28rpx;
}

.exam-location {
  color: #999;
  font-size: 24rpx;
} 