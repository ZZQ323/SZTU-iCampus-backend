.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.exams-container {
  min-height: 100vh;
  padding-bottom: 20px;
  background-color: rgba(108, 202, 139, 0.835);
}

.exam-type-selector {
  margin-bottom: 24rpx;
}

.countdown-section {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.countdown-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.countdown-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.exam-info {
  flex: 1;
}

.course-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.exam-time, .exam-location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.countdown-timer {
  text-align: right;
}

.countdown-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.countdown-value {
  font-size: 36rpx;
  color: #4a90e2;
  font-weight: bold;
}

.exams-list {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 自定义导航栏 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background: white;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 10vh;
  z-index: 100;
}

.navbar-left {
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.navbar-right {
  display: flex;
  gap: 8px;
}

.navbar-right .t-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 统计卡片 */
.stats-section {
  padding: 16px;
}

.stats-cards {
  display: flex;
  gap: 12px;
}

.stat-card {
  flex: 1;
  background: white;
  padding: 16px 12px;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.stat-number {
  font-size: 20px;
  font-weight: bold;
  color: #0052d9;
  margin-bottom: 4px;
  line-height: 1;
}

.stat-label {
  font-size: 12px;
  color: #666;
}

/* 最近考试卡片 */
.next-exam-section {
  padding: 0 16px 16px;
}

.next-exam-card {
  background: linear-gradient(135deg, #ff6b35 0%, #ff9500 100%);
  padding: 20px;
  border-radius: 16px;
  color: white;
  position: relative;
  overflow: hidden;
}

.next-exam-card::before {
  content: '';
  position: absolute;
  top: -30%;
  right: -20%;
  width: 100px;
  height: 100px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.exam-urgent-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  align-self: flex-start;
  margin-bottom: 12px;
  display: inline-block;
}

.exam-course {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 8px;
}

.exam-time {
  font-size: 14px;
  opacity: 0.9;
  margin-bottom: 4px;
}

.exam-location {
  font-size: 14px;
  opacity: 0.9;
  margin-bottom: 16px;
}

.countdown-section {
  text-align: center;
  margin: 16px 0;
}

.countdown-label {
  font-size: 14px;
  opacity: 0.9;
  margin-bottom: 8px;
}

.countdown-time {
  font-size: 28px;
  font-weight: bold;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.exam-actions {
  display: flex;
  gap: 8px;
  margin-top: 16px;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  padding: 10px;
  border-radius: 8px;
  font-size: 14px;
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.action-btn.primary {
  background: rgba(0, 0, 0, 0.2);
}

/* 成绩预告 */
.grade-notifications {
  margin: 0 16px 16px;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.notification-list {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.notification-item {
  display: flex;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.notification-item:last-child {
  border-bottom: none;
}

.notification-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 50%;
  margin-right: 12px;
}

.notification-info {
  flex: 1;
}

.notification-course {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.notification-message {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.notification-time {
  font-size: 12px;
  color: #999;
}

/* 考试类型选择 */
.type-selector {
  padding: 0 16px 16px;
}

.radio-list {
  display: flex;
  gap: 16px;
  background: white;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

/* 考试列表 */
.exams-section {
  margin: 0 16px;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  background: white;
  border-radius: 12px;
  color: #666;
  gap: 12px;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  background: white;
  border-radius: 12px;
  color: #999;
}

.empty-text {
  font-size: 16px;
  margin: 12px 0 4px;
}

.empty-subtitle {
  font-size: 14px;
  color: #ccc;
}

.exam-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.exam-item {
  background: white;
  border-radius: 12px;
  padding: 16px;
  position: relative;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.exam-item.completed {
  opacity: 0.8;
}

/* 考试状态标签 */
.exam-status-badge {
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 10px;
  padding: 4px 8px;
  border-radius: 10px;
  color: white;
}

.exam-status-badge.upcoming {
  background: #ff9500;
}

.exam-status-badge.completed {
  background: #00a870;
}

.exam-status-badge.ongoing {
  background: #e34d59;
}

/* 考试头部信息 */
.exam-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12px;
  margin-right: 60px;
}

.exam-course-info {
  flex: 1;
}

.course-name {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.course-code {
  font-size: 12px;
  color: #666;
  background: #f0f0f0;
  padding: 2px 8px;
  border-radius: 10px;
  display: inline-block;
}

.exam-score {
  text-align: right;
}

.score-value {
  font-size: 20px;
  font-weight: bold;
  color: #0052d9;
}

.score-total {
  font-size: 12px;
  color: #666;
}

/* 考试信息 */
.exam-info {
  margin-bottom: 12px;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
  font-size: 14px;
  color: #666;
}

.info-row:last-child {
  margin-bottom: 0;
}

/* 考试提示 */
.exam-tips {
  display: flex;
  align-items: flex-start;
  gap: 6px;
  background: #fff7e6;
  padding: 8px 12px;
  border-radius: 8px;
  margin-bottom: 12px;
}

.tips-text {
  font-size: 12px;
  color: #d4703a;
  line-height: 1.4;
}

/* 考试操作按钮 */
.exam-item .exam-actions {
  display: flex;
  gap: 8px;
}

.exam-item .action-btn {
  background: #f8f9fa;
  color: #666;
  border: 1px solid #e9ecef;
}

/* 考试攻略 */
.tips-section {
  margin: 24px 16px 0;
}

.tips-grid {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.tip-card {
  display: flex;
  align-items: center;
  background: white;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.tip-icon {
  width: 40px;
  height: 40px;
  background: #e7f3ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  font-size: 16px;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.tip-preview {
  font-size: 13px;
  color: #666;
}

/* 日历模态框 */
.calendar-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.calendar-content {
  background: white;
  width: 90%;
  max-width: 400px;
  max-height: 70%;
  border-radius: 16px;
  overflow: hidden;
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  background: #0052d9;
  color: white;
}

.calendar-title {
  font-size: 18px;
  font-weight: 600;
}

.calendar-events {
  padding: 16px;
  max-height: 400px;
  overflow-y: auto;
}

.calendar-event {
  display: flex;
  gap: 12px;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.calendar-event:last-child {
  border-bottom: none;
}

.event-date {
  width: 80px;
  font-size: 14px;
  font-weight: 600;
  color: #0052d9;
  flex-shrink: 0;
}

.event-info {
  flex: 1;
}

.event-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.event-time {
  font-size: 12px;
  color: #666;
  margin-bottom: 2px;
}

.event-location {
  font-size: 12px;
  color: #999;
} 