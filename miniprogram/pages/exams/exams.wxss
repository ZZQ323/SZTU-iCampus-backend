.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.exams-container {
  padding: 24rpx;
}

.exam-type-selector {
  margin-bottom: 24rpx;
}

.countdown-section {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.countdown-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.countdown-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.exam-info {
  flex: 1;
}

.course-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.exam-time, .exam-location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.countdown-timer {
  text-align: right;
}

.countdown-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.countdown-value {
  font-size: 36rpx;
  color: #4a90e2;
  font-weight: bold;
}

.exams-list {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
} 