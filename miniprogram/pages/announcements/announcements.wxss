/* 公告页面样式 */
.bblank{
  width: 100%;
  height:2vh;
}
.page {
  background: #ADD8E6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: env(safe-area-inset-top);
}

/* 搜索头部 */
.search-header {
  background: white;
  padding: 2% 2%;
  border-bottom: 1rpx solid #e0e0e0;
  width: 90vw;
  margin: auto;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
}

.search-box {
  width: 100%;
}

/* 分类标签 */
.filter-tabs {
  background: white;
  border-bottom: 1rpx solid #e0e0e0;
  margin: auto;
  width: 90vw;
  padding:0 2%;
  border-bottom-left-radius:20rpx;
  border-bottom-right-radius:20rpx;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-container {
  display: flex;
  padding: 0 20rpx;
}

.tab-item {
  flex-shrink: 0;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #0052d9;
  border-bottom-color: #0052d9;
  font-weight: 600;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 空状态 */
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 公告列表 */
.announcement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.announcement-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.announcement-item:active {
  transform: scale(0.98);
}

/* 公告项头部 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  margin-right: 16rpx;
}

.header-badges {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.collection-badge {
  font-size: 24rpx;
  color: #ff8f00;
  background: #fff3e0;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.badge.urgent {
  background: #fff1f0;
  color: #ff4d4f;
}

.badge.normal {
  background: #f0f8ff;
  color: #0052d9;
}

/* 公告内容预览 */
.item-content {
  margin-bottom: 24rpx;
}

.preview {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 公告项底部 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.department {
  font-size: 24rpx;
  color: #0052d9;
  background: #f0f8ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  gap: 16rpx;
}

/* 刷新提示 */
.refresh-tip {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
} 