/* 公告页面样式 */
.bblank{
  width: 100%;
  height:2vh;
}
.page {
  background: #ADD8E6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: env(safe-area-inset-top);
}

/* 搜索头部 */
.search-header {
  background: white;
  padding: 2% 2%;
  border-bottom: 1rpx solid #e0e0e0;
  width: 90vw;
  margin: auto;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
}

.search-box {
  width: 100%;
}

/* 分类和排序区域 */
.filter-section {
  background: white;
  margin: auto;
  width: 90vw;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #e0e0e0;
}

/* 分类标签 */
.filter-tabs {
  padding: 0 2%;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 排序区域 */
.sort-section {
  padding: 20rpx 2%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.sort-button {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.sort-button:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.sort-text {
  font-size: 26rpx;
  color: #333;
  margin-right: 8rpx;
}

.sort-icon {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.3s ease;
}

/* 排序菜单 */
.sort-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sort-menu {
  background: white;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 70vh;
  overflow: hidden;
  animation: sortMenuShow 0.3s ease-out;
}

@keyframes sortMenuShow {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.sort-menu-header {
  padding: 32rpx 32rpx 16rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.sort-menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.sort-options {
  max-height: 50vh;
  overflow-y: auto;
}

.sort-option {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f8f9fa;
  transition: background 0.2s ease;
}

.sort-option:active {
  background: #f8f9fa;
}

.sort-option.active {
  background: #f0f8ff;
}

.sort-option-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  min-width: 48rpx;
  text-align: center;
}

.sort-option-label {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.sort-option.active .sort-option-label {
  color: #0052d9;
  font-weight: 600;
}

.sort-option-check {
  font-size: 32rpx;
  color: #0052d9;
  font-weight: bold;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-container {
  display: flex;
  padding: 0 20rpx;
}

.tab-item {
  flex-shrink: 0;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #0052d9;
  border-bottom-color: #0052d9;
  font-weight: 600;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 空状态 */
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 公告列表 */
.announcement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.announcement-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.announcement-item:active {
  transform: scale(0.98);
}

/* 公告项头部 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  margin-right: 16rpx;
}

.header-badges {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.collection-badge {
  font-size: 24rpx;
  color: #ff8f00;
  background: #fff3e0;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.badge.urgent {
  background: #fff1f0;
  color: #ff4d4f;
}

.badge.normal {
  background: #f0f8ff;
  color: #0052d9;
}

/* 公告内容预览 */
.item-content {
  margin-bottom: 24rpx;
}

.preview {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 公告项底部 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.department {
  font-size: 24rpx;
  color: #0052d9;
  background: #f0f8ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  gap: 16rpx;
}

/* 刷新提示 */
.refresh-tip {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
} 