.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 筛选器样式 */
.filter-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  display: flex;
  align-items: center;
  flex: 1;
  margin: 0 20rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  font-weight: 500;
}

.picker-text {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

/* 加载和错误状态 */
.error-state, .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.error-text, .empty-text {
  font-size: 28rpx;
  margin: 20rpx 0;
  color: #999;
}

/* 活动列表 */
.events-list {
  padding: 0 30rpx;
}

.event-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.event-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 活动头部 */
.event-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  flex: 1;
  margin-right: 20rpx;
}

.event-badges {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 标签样式 */
.type-badge, .status-badge {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  color: white;
  font-weight: 500;
  text-align: center;
  min-width: 60rpx;
}

/* 活动类型标签 */
.type-academic {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.type-social {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.type-sports {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

.type-cultural {
  background: linear-gradient(135deg, #ffecd2, #fcb69f);
  color: #333;
}

.type-competition {
  background: linear-gradient(135deg, #ff9a9e, #fad0c4);
  color: #333;
}

/* 活动状态标签 */
.status-upcoming {
  background: linear-gradient(135deg, #007aff, #0051d5);
}

.status-ongoing {
  background: linear-gradient(135deg, #34c759, #30b94f);
}

.status-completed {
  background: linear-gradient(135deg, #8e8e93, #6d6d75);
}

/* 活动信息行 */
.event-time, .event-location, .event-organizer, .event-participants {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.time-text, .location-text, .organizer-text, .participants-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 12rpx;
}

/* 参与人数进度条 */
.event-participants {
  align-items: flex-start;
  flex-direction: column;
}

.participants-text {
  margin-left: 36rpx;
  margin-bottom: 8rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #e5e5e5;
  border-radius: 3rpx;
  overflow: hidden;
  margin-left: 36rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #9c27b0, #e91e63);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

/* 活动描述 */
.event-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .filter-section {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .filter-item {
    margin: 0;
  }
  
  .event-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .event-badges {
    margin-top: 15rpx;
    flex-direction: row;
    gap: 12rpx;
  }
  
  .event-participants {
    flex-direction: row;
    align-items: center;
  }
  
  .participants-text {
    margin-left: 12rpx;
    margin-bottom: 0;
    margin-right: 20rpx;
  }
  
  .progress-bar {
    flex: 1;
    margin-left: 0;
  }
} 