<!-- 登录页面 -->
<view class="login-page">
  <!-- 顶部装饰 -->
  <view class="header">
    <view class="logo">🎓</view>
    <view class="title">SZTU iCampus</view>
    <view class="subtitle">深圳技术大学校园服务</view>
  </view>

  <!-- 登录表单 -->
  <view class="login-form">
    <!-- 登录方式选择 -->
    <view class="login-type-tabs">
      <view 
        class="tab-item {{loginType === 'student' ? 'active' : ''}}"
        bindtap="onLoginTypeChange"
        data-type="student"
      >
        学生登录
      </view>
      <view 
        class="tab-item {{loginType === 'admin' ? 'active' : ''}}"
        bindtap="onLoginTypeChange"
        data-type="admin"
      >
        管理员登录
      </view>
      <view 
        class="tab-item {{loginType === 'guest' ? 'active' : ''}}"
        bindtap="onLoginTypeChange"
        data-type="guest"
      >
        快速体验
      </view>
    </view>

    <!-- 学生登录表单 -->
    <view wx:if="{{loginType === 'student'}}" class="form-content">
      <view class="input-group">
        <text class="label">学号</text>
        <input 
          class="input"
          placeholder="请输入学号"
          value="{{formData.studentId}}"
          bindinput="onStudentIdInput"
        />
      </view>
      <view class="input-group">
        <text class="label">密码</text>
        <input 
          class="input"
          type="password"
          placeholder="请输入密码"
          value="{{formData.password}}"
          bindinput="onPasswordInput"
        />
      </view>
    </view>

    <!-- 管理员登录表单 -->
    <view wx:if="{{loginType === 'admin'}}" class="form-content">
      <view class="input-group">
        <text class="label">管理员账号</text>
        <input 
          class="input"
          placeholder="请输入管理员账号"
          value="{{formData.studentId}}"
          bindinput="onStudentIdInput"
        />
      </view>
      <view class="input-group">
        <text class="label">密码</text>
        <input 
          class="input"
          type="password"
          placeholder="请输入管理员密码"
          value="{{formData.password}}"
          bindinput="onPasswordInput"
        />
      </view>
      <view class="tip">
        <text>默认账号: admin / 密码: admin123</text>
      </view>
    </view>

    <!-- 快速体验表单 -->
    <view wx:if="{{loginType === 'guest'}}" class="form-content">
      <view class="input-group">
        <text class="label">姓名</text>
        <input 
          class="input"
          placeholder="请输入姓名"
          value="{{formData.name}}"
          bindinput="onNameInput"
        />
      </view>
      <view class="tip">
        <text>快速体验模式，无需真实信息</text>
      </view>
    </view>

    <!-- 登录按钮 -->
    <t-button 
      theme="primary" 
      size="large" 
      block
      loading="{{loading}}"
      bindtap="onLogin"
      class="login-btn"
    >
      {{loading ? '登录中...' : '登录'}}
    </t-button>

    <!-- 快速登录选项 -->
    <view class="quick-actions">
      <t-button theme="light" size="medium" bindtap="onQuickLogin">
        一键登录（张三）
      </t-button>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer">
    <text class="version">v1.0.0</text>
    <text class="copyright">© 2024 深圳技术大学</text>
  </view>
</view> 