/* 登录页面样式 */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  padding-top: calc(env(safe-area-inset-top) + 40rpx);
}

/* 头部 */
.header {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录表单 */
.login-form {
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

/* 登录方式选择 */
.login-type-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #0052d9;
  color: white;
  font-weight: 600;
}

/* 表单内容 */
.form-content {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #0052d9;
  background: white;
}

.tip {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f8ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #0052d9;
}

.tip text {
  font-size: 24rpx;
  color: #666;
}

/* 登录按钮 */
.login-btn {
  margin-bottom: 32rpx;
}

/* 快速操作 */
.quick-actions {
  text-align: center;
}

/* 底部 */
.footer {
  margin-top: auto;
  padding-top: 40rpx;
  text-align: center;
}

.version {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8rpx;
}

.copyright {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.login-tips {
  margin-top: 32rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.admin-hint {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #0052d9;
}

.feature-highlights {
  display: flex;
  justify-content: space-around;
  margin-top: 60rpx;
  width: 100%;
  max-width: 600rpx;
}

.highlight-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.9;
}

.highlight-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.highlight-text {
  font-size: 24rpx;
  color: #ffffff;
} 