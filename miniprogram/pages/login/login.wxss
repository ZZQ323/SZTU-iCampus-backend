/* 登录页面样式 */
.login-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
}

/* 顶部装饰 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录表单 */
.login-form {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

/* 微信登录部分 */
.wechat-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.wechat-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin: 0 auto 30rpx;
  border: 4rpx solid #f0f0f0;
}

.wechat-avatar image {
  width: 100%;
  height: 100%;
}

.wechat-info .nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.wechat-welcome .welcome-text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.wechat-info .tip,
.wechat-welcome .tip {
  font-size: 28rpx;
  color: #999;
}

/* 绑定头部 */
.bind-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.bind-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.bind-tip {
  font-size: 28rpx;
  color: #999;
}

/* 登录方式选择 */
.login-type-tabs {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: white;
  color: #667eea;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 表单内容 */
.form-content {
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s;
}

.input:focus {
  border-color: #667eea;
  background: white;
}

.tip {
  text-align: center;
  margin-top: 20rpx;
}

.tip text {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 登录按钮 */
.login-btn,
.wechat-login-btn,
.bind-btn {
  margin-bottom: 40rpx;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.wechat-login-btn {
  background: #07c160;
  border: none;
}

.wechat-login-btn::after {
  border: none;
}

/* 其他登录选项 */
.other-login {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.other-login text {
  font-size: 28rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.other-login text:first-child,
.other-login text:last-child {
  background: rgba(102, 126, 234, 0.1);
}

.other-login text:nth-child(2) {
  color: #ccc;
}

/* 绑定操作 */
.bind-actions {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.bind-actions text {
  font-size: 28rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.bind-actions text:first-child,
.bind-actions text:last-child {
  background: rgba(102, 126, 234, 0.1);
}

.bind-actions text:nth-child(2) {
  color: #ccc;
}

/* 快速登录 */
.quick-actions {
  margin-top: 40rpx;
  text-align: center;
}

.quick-actions .t-button {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

/* 底部信息 */
.footer {
  margin-top: auto;
  padding-top: 60rpx;
  text-align: center;
}

.version {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8rpx;
}

.copyright {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .login-page {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .login-form {
    padding: 40rpx 30rpx;
  }
  
  .header {
    margin-bottom: 60rpx;
  }
} 