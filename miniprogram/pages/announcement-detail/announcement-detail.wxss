.announcement-detail {
  min-height: 100vh;
  background-color: #ADD8E6;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #0052d9;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.detail-container {
  padding: 32rpx;
}

.announcement-header {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.announcement-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

.announcement-meta {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.meta-value {
  font-size: 28rpx;
  color: #1a1a1a;
  flex: 1;
}

.info-value.realtime {
  color: #00c851;
}

.info-value.normal {
  color: #0052d9;
}

.announcement-content {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.content-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #1a1a1a;
  white-space: pre-wrap;
  word-break: break-word;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #0052d9 0%, #0041a8 100%);
  color: #ffffff;
}

.action-btn.secondary {
  background: #ffffff;
  color: #0052d9;
  border: 2rpx solid #e0e0e0;
}

.action-btn.secondary:hover {
  border-color: #0052d9;
  background: #f5f8ff;
}

.action-btn.collected {
  background: #fff3e0;
  color: #ff8f00;
  border: 2rpx solid #ffcc80;
}

.action-btn.collected:hover {
  background: #ffe0b2;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

.related-info {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  font-weight: 500;
} 