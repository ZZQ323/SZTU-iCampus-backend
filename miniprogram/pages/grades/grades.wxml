<view class="container">
  <custom-navbar 
    title="成绩查询" 
    background="#4a90e2"
    color="#ffffff"
    bind:back="onBack"
  />
  
  <view class="grades-container">
    <!-- 学期选择器 -->
    <view class="semester-select">
      <t-picker
        title="选择学期"
        value="{{currentSemester}}"
        options="{{semesters}}"
        bind:change="onSemesterChange"
      />
    </view>

    <view class="gpa-info">
      <view class="gpa-item">
        <text class="label">GPA</text>
        <text class="value">{{gpa}}</text>
      </view>
      <view class="gpa-item">
        <text class="label">总学分</text>
        <text class="value">{{totalCredits}}</text>
      </view>
    </view>

    <!-- 成绩列表 -->
    <view class="grades-list">
      <t-cell-group>
        <t-cell 
          wx:for="{{grades}}" 
          wx:key="id" 
          title="{{item.courseName}}" 
          note="学分：{{item.credits}}"
          description="成绩：{{item.score}}"
          hover
          arrow
          bindtap="onViewDetail"
          data-id="{{item.id}}"
        />
      </t-cell-group>
    </view>
  </view>
</view> 