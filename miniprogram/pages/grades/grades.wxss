.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.grades-container {
  padding: 24rpx;
}

.semester-selector {
  margin-bottom: 24rpx;
}

.gpa-info {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.gpa-item {
  text-align: center;
}

.gpa-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.gpa-item .value {
  font-size: 40rpx;
  color: #4a90e2;
  font-weight: bold;
}

.grades-list {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.grade-note {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.grade-score {
  font-size: 32rpx;
  font-weight: bold;
}

.grade-score.pass {
  color: #0052d9;
}

.grade-score.fail {
  color: #e34d59;
}

.grade-point {
  color: #999;
  font-size: 24rpx;
}

.summary {
  margin-top: 16rpx;
} 