/* 成绩查询页面样式 */
.page {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 学期选择器 */
.semester-selector {
  margin: 20rpx 32rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.semester-info {
  flex: 1;
}

.current-semester {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.semester-name {
  font-size: 24rpx;
  color: #7f8c8d;
}

.semester-picker {
  display: flex;
  align-items: center;
}

.picker-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #28a745;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  filter: brightness(0) invert(1);
}

/* 成绩汇总卡片 */
.summary-card {
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(40, 167, 69, 0.2);
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  text-align: center;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.summary-item {
  text-align: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #28a745, #20c997);
  border-radius: 16rpx;
  color: white;
}

.summary-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
  margin-bottom: 8rpx;
}

.summary-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.ranking-info {
  text-align: center;
  padding: 16rpx;
  background: rgba(40, 167, 69, 0.1);
  border-radius: 12rpx;
}

.rank-text {
  font-size: 26rpx;
  color: #28a745;
  font-weight: 500;
}

/* 筛选选项 */
.filter-section {
  margin: 0 32rpx 32rpx;
}

.filter-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  font-size: 24rpx;
  color: #7f8c8d;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: #28a745;
  color: white;
  font-weight: bold;
}

/* 成绩列表 */
.grades-list {
  margin: 0 32rpx;
}

.grade-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border-left: 8rpx solid #28a745;
  transition: all 0.3s ease;
}

.grade-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 1);
}

/* 不同等级的成绩颜色 */
.grade-item.A {
  border-left-color: #28a745;
}

.grade-item.B {
  border-left-color: #007bff;
}

.grade-item.C {
  border-left-color: #ffc107;
}

.grade-item.D {
  border-left-color: #fd7e14;
}

.grade-item.F {
  border-left-color: #dc3545;
}

.grade-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.course-info {
  flex: 1;
  margin-right: 16rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.course-code {
  font-size: 24rpx;
  color: #7f8c8d;
}

.grade-score {
  text-align: right;
  min-width: 120rpx;
}

.total-score {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #28a745;
  line-height: 1;
  margin-bottom: 4rpx;
}

.grade-level {
  font-size: 24rpx;
  color: #7f8c8d;
  padding: 4rpx 12rpx;
  background: rgba(40, 167, 69, 0.1);
  border-radius: 12rpx;
}

/* 成绩详情 */
.grade-details {
  margin-bottom: 20rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.detail-label {
  color: #7f8c8d;
  margin-right: 8rpx;
}

.detail-value {
  color: #2c3e50;
  margin-right: 32rpx;
}

.course-type {
  color: #007bff;
  font-weight: 500;
}

.gpa-points {
  color: #28a745;
  font-weight: bold;
}

/* 成绩构成进度条 */
.score-breakdown {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
}

.breakdown-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.breakdown-label {
  font-size: 20rpx;
  color: #7f8c8d;
  width: 120rpx;
  flex-shrink: 0;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-left: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #28a745, #20c997);
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

/* 空状态 */
.empty-grades {
  margin: 80rpx 32rpx;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 成绩详情弹窗 */
.grade-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.grade-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 640rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.grade-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 32rpx;
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  position: relative;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  padding-right: 60rpx;
  line-height: 1.3;
}

.modal-close {
  position: absolute;
  top: 24rpx;
  right: 32rpx;
  font-size: 48rpx;
  line-height: 1;
  cursor: pointer;
}

.modal-body {
  padding: 32rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

/* 成绩展示区 */
.modal-score-display {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 32rpx;
  background: rgba(40, 167, 69, 0.05);
  border-radius: 16rpx;
}

.main-score {
  margin-bottom: 24rpx;
}

.score-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #28a745;
  margin-right: 16rpx;
}

.score-level {
  font-size: 36rpx;
  color: #7f8c8d;
  padding: 8rpx 16rpx;
  background: white;
  border-radius: 20rpx;
}

.score-details {
  display: flex;
  justify-content: space-around;
}

.score-item {
  text-align: center;
}

.score-label {
  display: block;
  font-size: 20rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}

.score-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c3e50;
}

/* 详细信息 */
.modal-info {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #7f8c8d;
}

.info-value {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.modal-footer {
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  width: 100%;
  height: 88rpx;
  background: #28a745;
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
}

/* 底部安全距离 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  height: 120rpx;
} 