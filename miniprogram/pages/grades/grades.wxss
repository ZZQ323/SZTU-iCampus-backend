.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.grades-container {
  padding: 16rpx;
}

.semester-selector {
  margin-bottom: 16rpx;
}

.grades-list {
  margin: 16rpx 0;
}

.grade-note {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.grade-score {
  font-size: 32rpx;
  font-weight: bold;
}

.grade-score.pass {
  color: #0052d9;
}

.grade-score.fail {
  color: #e34d59;
}

.grade-point {
  color: #999;
  font-size: 24rpx;
}

.summary {
  margin-top: 16rpx;
} 