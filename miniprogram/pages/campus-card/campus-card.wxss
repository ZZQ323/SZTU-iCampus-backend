.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.card-container {
  padding: 16rpx;
}

.card-info {
  background: linear-gradient(135deg, #0052d9, #1890ff);
  border-radius: 16rpx;
  padding: 32rpx;
  color: #fff;
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-info {
  margin-left: 24rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.student-id {
  font-size: 28rpx;
  opacity: 0.8;
}

.balance-info {
  text-align: center;
}

.balance-label {
  font-size: 28rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 8rpx;
}

.balance-amount {
  font-size: 48rpx;
  font-weight: bold;
}

.card-functions {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 24rpx 0 16rpx;
}

.transaction-amount {
  font-weight: bold;
}

.transaction-amount.expense {
  color: #e34d59;
}

.transaction-amount.income {
  color: #00a870;
} 