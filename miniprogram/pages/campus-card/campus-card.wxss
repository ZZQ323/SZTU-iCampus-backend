.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.card-container {
  padding: 24rpx;
}

.card-info {
  background: linear-gradient(135deg, #4a90e2, #357abd);
  border-radius: 16rpx;
  padding: 32rpx;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-balance {
  margin-bottom: 16rpx;
}

.balance-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.balance-amount {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 8rpx;
  display: block;
}

.card-number {
  font-size: 24rpx;
  opacity: 0.8;
}

.quick-actions {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.recent-records {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.custom-navbar {
  background: #4a90e2 !important;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.student-id {
  font-size: 28rpx;
  opacity: 0.8;
}

.card-functions {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.transaction-amount {
  font-weight: bold;
}

.transaction-amount.expense {
  color: #e34d59;
}

.transaction-amount.income {
  color: #00a870;
} 