.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.card-container {
  padding: 24rpx;
}

.card-info {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.card-header {
  margin-bottom: 32rpx;
}

.balance {
  text-align: center;
  margin-bottom: 16rpx;
}

.balance .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.balance .value {
  font-size: 48rpx;
  color: #4a90e2;
  font-weight: bold;
}

.card-number {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.card-actions {
  margin-top: 32rpx;
}

.card-functions {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.card-notice {
  margin-top: 24rpx;
} 