/* 考试详情页面样式 */
.exam-detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  background: white;
  margin: 16px;
  border-radius: 12px;
  color: #666;
  gap: 12px;
}

/* 考试详情内容 */
.exam-detail-content {
  padding: 16px;
}

/* 考试基础信息卡片 */
.exam-info-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20px;
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 6px;
  line-height: 1.4;
}

.course-code {
  font-size: 12px;
  color: #666;
  background: #f0f0f0;
  padding: 3px 8px;
  border-radius: 10px;
  display: inline-block;
}

.exam-status {
  font-size: 12px;
  padding: 4px 10px;
  border-radius: 12px;
  color: white;
  font-weight: 500;
}

.exam-status.upcoming {
  background: #ff9500;
}

.exam-status.completed {
  background: #00a870;
}

.exam-status.ongoing {
  background: #e34d59;
}

/* 考试基础信息 */
.exam-basic-info {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 12px;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 12px;
  color: #999;
  margin-bottom: 2px;
}

.info-value {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

/* 通用section样式 */
.progress-section,
.seat-section,
.requirements-section,
.reminder-section {
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
  padding-left: 4px;
}

/* 考试进度 */
.progress-steps {
  background: white;
  border-radius: 12px;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow-x: auto;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 60px;
}

.step-icon {
  margin-bottom: 8px;
}

.step-text {
  font-size: 12px;
  color: #666;
  text-align: center;
  white-space: nowrap;
}

.step.completed .step-text {
  color: #00a870;
  font-weight: 500;
}

.step-line {
  flex: 1;
  height: 2px;
  background: #f0f0f0;
  margin: 0 8px;
  align-self: flex-start;
  margin-top: 10px;
}

.step-line.active {
  background: #00a870;
}

/* 座位信息 */
.seat-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.seat-info {
  display: flex;
  gap: 24px;
}

.seat-detail {
  text-align: center;
}

.seat-label {
  font-size: 12px;
  color: #999;
  margin-bottom: 4px;
}

.seat-value {
  font-size: 14px;
  color: #333;
  font-weight: 600;
}

.seat-actions .action-btn {
  display: flex;
  align-items: center;
  gap: 6px;
  background: #e7f3ff;
  color: #0052d9;
  padding: 8px 12px;
  border-radius: 8px;
  font-size: 13px;
}

/* 考试要求 */
.requirement-cards {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.requirement-card {
  background: white;
  border-radius: 12px;
  padding: 16px;
  display: flex;
  align-items: center;
  gap: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.requirement-icon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.requirement-content {
  flex: 1;
}

.requirement-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 2px;
}

.requirement-desc {
  font-size: 13px;
  color: #666;
}

/* 提醒设置 */
.reminder-card {
  background: white;
  border-radius: 12px;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.reminder-info {
  display: flex;
  align-items: center;
  gap: 12px;
  flex: 1;
}

.reminder-icon {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 2px;
}

.reminder-desc {
  font-size: 13px;
  color: #666;
  line-height: 1.4;
}

/* 快捷操作 */
.quick-actions {
  margin-top: 24px;
  margin-bottom: 32px;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.action-item {
  background: white;
  border-radius: 12px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.action-item:active {
  transform: scale(0.95);
}

.action-item text {
  font-size: 13px;
  color: #333;
  font-weight: 500;
} 