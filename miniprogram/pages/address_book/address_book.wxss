/* 通讯录页面样式 */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.bblank {
  height: env(safe-area-inset-top);
  background-color: #0052d9;
}

.content {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
}

.contacts-placeholder {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  min-width: 400rpx;
}

.placeholder-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 8rpx;
}