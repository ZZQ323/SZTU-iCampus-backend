/* SZTU-iCampus 首页样式 */

.bblank{
  height: 10vh;
}

.page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 导航栏 */
.navbar-right {
  display: flex;
  align-items: center;
}

.notification-icon {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.notification-icon .icon {
  width: 100%;
  height: 100%;
}

.notification-icon .badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1;
}

/* 用户信息卡片 */
.user-card {
  margin: 40rpx 32rpx 0;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 24rpx;
  border: 4rpx solid #667eea;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 4rpx;
}

.user-college {
  font-size: 24rpx;
  color: #95a5a6;
}

.user-stats {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.stat-item {
  text-align: center;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 12rpx;
  min-width: 120rpx;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  line-height: 1;
}

.stat-label {
  display: block;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

/* 快捷服务 */
.quick-section {
  margin: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.grid-item:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.95);
}

.grid-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.grid-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.grid-text {
  font-size: 24rpx;
  color: #2c3e50;
  text-align: center;
  line-height: 1.2;
}

/* 通用section */
.section {
  margin: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-more {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
}

/* 今日课表 */
.schedule-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-item.current {
  background: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
  margin: 0 -12rpx;
  padding: 24rpx 12rpx;
}

.schedule-time {
  width: 160rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.time-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #52c41a;
  border-radius: 50%;
  margin-left: 12rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.schedule-info {
  flex: 1;
  padding-left: 24rpx;
}

.course-name {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.course-detail {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
}

.schedule-status {
  padding: 8rpx 16rpx;
  background: #52c41a;
  color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
}

/* 空课表 */
.empty-schedule {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 最新公告 */
.announcement-list {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.announcement-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.3s ease;
}

.announcement-item:last-child {
  border-bottom: none;
}

.announcement-item:active {
  background: rgba(102, 126, 234, 0.05);
}

.announcement-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.announcement-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  line-height: 1.4;
  flex: 1;
  margin-right: 16rpx;
}

.announcement-badges {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
}

.urgent-badge {
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.category-badge {
  background: #667eea;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.announcement-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.announcement-department {
  font-size: 24rpx;
  color: #7f8c8d;
}

.announcement-date {
  font-size: 24rpx;
  color: #95a5a6;
}

/* 底部安全距离 */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  height: 120rpx;
} 