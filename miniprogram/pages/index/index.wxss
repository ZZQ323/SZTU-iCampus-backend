.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.custom-navbar {
  background-color: #0052d9;
  color: #fff;
}

/* 用户信息卡片样式 */
.user-card {
  background-color: #0052d9;
  padding: 32rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.user-info {
  margin-left: 24rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 8rpx;
  display: block;
}

/* 功能导航区样式 */
.feature-grid {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx 0;
}

/* 快捷功能区样式 */
.quick-actions {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

/* 公告区样式 */
.announcement-section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

/* 单元格样式 */
.t-cell {
  padding: 24rpx 32rpx;
}

.t-cell__title {
  font-size: 28rpx;
  color: #333;
}

.t-cell__note {
  font-size: 24rpx;
  color: #999;
}

/* 图标样式 */
.t-icon {
  font-size: 40rpx;
  color: #0052d9;
} 