.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.custom-navbar {
  background-color: #0052d9;
  color: #fff;
}

/* 头部样式 */
.header {
  background: #0052d9;
  padding: 24rpx;
  margin: 24rpx;
  border-radius: 20rpx;
}

.user-card {
  display: flex;
  align-items: center;
  width: 100%;
}

.user-card .user-avatar {
  width: 100rpx;   /* 设置宽度 */
  height: 100rpx;  /*设置高度*/
  margin-right: 20rpx; /* 如果需要和右边的信息有间隔 */
}

.user-info {
  margin-left: 24rpx;
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  display: block;
}

.user-id {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

/* 通用区块样式 */
.section {
  margin: 0 24rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 功能导航区样式 */
.feature-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx;
}

.feature-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #333;
}

/* 快捷功能区样式 */
.quick-actions {
  padding: 0;
}

/* 公告区样式 */
.announcement-section {
  padding: 0;
}

/* 单元格样式 */
.t-cell {
  padding: 24rpx 32rpx;
}

.t-cell__title {
  font-size: 28rpx;
  color: #333;
}

.t-cell__note {
  font-size: 24rpx;
  color: #999;
}

/* 图标样式 */
.t-icon {
  font-size: 40rpx;
  color: #0052d9;
} 