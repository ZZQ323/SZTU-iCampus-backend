/* 首页样式 */
.bblank{
  width: 100%;
  height:10vh;
}


.page {
  background-color: rgb(196, 193, 235);
  min-height: 100vh;
  padding: 20rpx;
  padding-top: calc(env(safe-area-inset-top) + 20rpx);
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
}

.user-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

/* 自定义按钮样式 */
.custom-btn {
  height: 56rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  margin: 0;
  background: none;
  color: #fff;
  box-sizing: border-box;
}

.custom-btn::after {
  border: none;
}

.custom-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 登录按钮 */
.login-btn {
  background: #007aff;
  color: #fff;
  font-weight: 500;
}

/* 退出按钮 */
.logout-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #fff;
  width: 20rpx;
}

/* 管理按钮 */
.admin-btn {
  background: #ff9800;
  color: #fff;
  font-weight: bold;
}

/* 分区样式 */
.section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  padding: 32rpx 32rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  padding-bottom: 16rpx;
}

/* 服务网格 */
.service-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 32rpx;
  padding-top: 16rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  cursor: pointer;
}

.service-item:active {
  background: #e6f7ff;
  transform: scale(0.95);
}

.service-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.service-icon-text {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  line-height: 1;
}

.service-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.2;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 32rpx;
  color: #999;
  font-size: 28rpx;
}

/* 流式状态 */
.stream-status {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  background: rgba(26, 173, 25, 0.9);
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.3);
}

.status-text {
  font-weight: 500;
}

.status-detail {
  opacity: 0.8;
  font-size: 20rpx;
}

/* 联系信息部分 */
.contact-section {
  margin-bottom: 40rpx;
}

.contact-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  padding: 32rpx;
  padding-top: 16rpx;
}

.contact-item {
  background: #fafafa;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #0052d9;
  transition: all 0.3s ease;
}

.contact-item:active {
  background: #f0f8ff;
  transform: scale(0.98);
}

.contact-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.contact-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  line-height: 1;
}

.contact-details {
  flex: 1;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.contact-category {
  font-size: 22rpx;
  color: #0052d9;
  background: #f0f8ff;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.contact-phone {
  font-size: 26rpx;
  color: #333;
  font-family: monospace;
  margin-bottom: 16rpx;
  padding: 8rpx 12rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.contact-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 1rpx solid #e0e0e0;
}

.action-btn:active {
  transform: scale(0.95);
}

.call-btn {
  background: #52c41a;
  color: white;
  border-color: #52c41a;
}

.call-btn:active {
  background: #389e0d;
}

.copy-btn {
  background: white;
  color: #666;
}

.copy-btn:active {
  background: #f5f5f5;
}

.contact-footer {
  padding: 20rpx 32rpx;
  text-align: center;
  border-top: 1rpx solid #f0f0f0;
}

.footer-tip {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
} 