<view class="container">
  <t-navbar 
    title="深技大校园服务" 
    t-class="custom-navbar"
    back="{{true}}"
    bind:back="onBack"
  />
  
  <!-- 用户信息卡片 -->
  <view class="header">
    <view class="user-card">
      <image class="user-avatar" mode="aspectFill" src="/assets/test/man.png" size="normal" />
      <view class="user-info">
        <text class="user-name">{{userInfo.name}}</text>
        <text class="user-id">学号：{{userInfo.studentId}}</text>
      </view>
    </view>
  </view>

  <!-- 功能导航区 -->
  <view class="section">
    <view class="section-title">常用功能</view>
    <view class="feature-grid">
      <view class="feature-item" bindtap="navigateToAnnouncements">
        <image class="feature-icon" src="/assets/icons/notification.png" mode="aspectFit" />
        <text class="feature-text">校园公告</text>
      </view>
      <view class="feature-item" bindtap="navigateToSchedule">
        <image class="feature-icon" src="/assets/icons/schedule.png" mode="aspectFit" />
        <text class="feature-text">课表查询</text>
      </view>
      <view class="feature-item" bindtap="navigateToNotices">
        <image class="feature-icon" src="/assets/icons/message.png" mode="aspectFit" />
        <text class="feature-text">部门通知</text>
      </view>
      <view class="feature-item" bindtap="navigateToEvents">
        <image class="feature-icon" src="/assets/icons/event.png" mode="aspectFit" />
        <text class="feature-text">活动日历</text>
      </view>
    </view>
  </view>

  <!-- 快捷功能区 -->
  <view class="section">
    <view class="section-title">快捷服务</view>
    <view class="quick-actions">
      <t-cell-group>
        <t-cell title="成绩查询" hover arrow image="/assets/icons/Grade.png" bindtap="navigateToGrades" />
        <t-cell title="考试安排" hover arrow image="/assets/icons/examination.png" bindtap="navigateToExams" />
        <t-cell title="校园卡" hover arrow image="/assets/icons/wallet.png" bindtap="navigateToCampusCard" />
        <t-cell title="图书馆" hover arrow image="/assets/icons/Library.png" bindtap="navigateToLibrary" />
      </t-cell-group>
    </view>
  </view>

  <!-- 最新公告区 -->
  <view class="section">
    <view class="section-title">最新公告</view>
    <view class="announcement-section">
      <view wx:if="{{loading}}" class="loading-container">
        <t-loading theme="dots" size="40rpx" text="加载中..." />
      </view>
      <t-cell-group wx:else>
        <t-cell 
          wx:for="{{announcements}}" 
          wx:key="id" 
          title="{{item.title}}" 
          description="{{item.department}}"
          hover 
          note="{{item.date}} {{item.time}}" 
          arrow 
          bindtap="viewAnnouncement" 
          data-announcement="{{item}}" 
        />
        <view wx:if="{{announcements.length === 0}}" class="empty-state">
          <text class="empty-text">暂无公告</text>
        </view>
      </t-cell-group>
    </view>
  </view>
</view> 