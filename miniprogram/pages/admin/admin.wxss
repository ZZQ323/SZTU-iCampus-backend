/* 管理员页面样式 */
.bblank{
  width: 100%;
  height:10vh;
}
.page {
  background: rgb(196, 193, 235);
  min-height: 100vh;
  padding: 20rpx;
  padding-top: calc(env(safe-area-inset-top) + 20rpx);
}

/* 头部信息 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.admin-info {
  display: flex;
  align-items: center;
}

.info-text {
  margin-left: 24rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.role {
  font-size: 24rpx;
  opacity: 0.8;
}

.status {
  display: flex;
  align-items: center;
}

/* 统计卡片 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.stat-icon.user {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.stat-icon.admin {
  background: linear-gradient(135deg, #ffecd2, #fcb69f);
}

.stat-icon.announcement {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
}

.stat-icon.notice {
  background: linear-gradient(135deg, #ff9a9e, #fecfef);
}

.stat-content {
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能模块 */
.functions-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.function-group {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.function-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.function-item:active {
  background: #e6f7ff;
  transform: scale(0.95);
}

.function-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.function-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 最近操作 */
.recent-section {
  margin-bottom: 30rpx;
}

.recent-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.recent-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-item:last-child {
  border-bottom: none;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f8ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.action-content {
  flex: 1;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.action-time {
  font-size: 22rpx;
  color: #999;
}

.action-status {
  margin-left: 16rpx;
}

/* 管理员信息卡片 */
.admin-header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #0052d9 0%, #0040a6 100%);
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(0, 82, 217, 0.2);
}

.admin-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.admin-role {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 系统统计 */
.stats-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  border: 2rpx solid #dee2e6;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #0052d9;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 管理功能区域 */
.management-section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tab-content {
  padding: 30rpx;
  min-height: 400rpx;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 快捷操作 */
.quick-actions {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 列表项样式优化 */
.t-cell {
  border-radius: 12rpx !important;
  margin-bottom: 16rpx !important;
  background: #f8f9fa !important;
  border: 1rpx solid #dee2e6 !important;
}

.t-cell:hover {
  background: #e9ecef !important;
  transform: translateY(-2rpx);
  transition: all 0.2s ease;
}

/* 选项卡样式 */
.t-tabs {
  background: white;
}

.t-tab-panel {
  background: white;
}

/* 对话框样式 */
.t-dialog {
  border-radius: 16rpx !important;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .admin-header {
    padding: 30rpx;
  }
  
  .admin-name {
    font-size: 32rpx;
  }
}

/* 动画效果 */
.admin-container > view {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 状态指示 */
.stat-item:hover {
  transform: scale(1.02);
  transition: transform 0.2s ease;
}

/* 管理员标识 */
.admin-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ffd700, #ffed4e);
}

.admin-header {
  position: relative;
} 