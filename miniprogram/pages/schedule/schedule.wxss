/* 课表页面样式 */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 周次选择器 */
.week-selector {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.week-info {
  display: flex;
  flex-direction: column;
}

.current-week {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.semester {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.week-picker {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  overflow: hidden;
}

.picker-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  gap: 8rpx;
}

/* 星期导航 */
.day-navigation {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.day-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  min-width: 80rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.day-tab.active {
  background-color: #95a5b9;
  color: #fff;
}

.day-tab.today:not(.active) {
  background-color: #ff9500;
  color: #fff;
}

.day-name {
  font-size: 28rpx;
  font-weight: 500;
}

.day-date {
  font-size: 24rpx;
  margin-top: 4rpx;
  opacity: 0.8;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  gap: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 课程列表 */
.courses-list {
  padding: 0 30rpx;
}

.course-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.course-item:active {
  transform: scale(0.98);
}

/* 课程状态 */
.course-item.current {
  border-left: 8rpx solid #ff9500;
}

.course-item.finished {
  opacity: 0.7;
  border-left: 8rpx solid #ccc;
}

.course-item.upcoming {
  border-left: 8rpx solid #778899;
}

.course-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #ff9500;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.course-item.finished .course-status {
  background-color: #ccc;
}

.course-item.upcoming .course-status {
  background-color: #194c9e;
}

/* 课程头部 */
.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-right: 80rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.course-type-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.type-required {
  background-color: #e8f4ff;
  color: #0052d9;
}

.type-elective {
  background-color: #fff2e8;
  color: #ff9500;
}

.type-practical {
  background-color: #e8f5e8;
  color: #00a870;
}

/* 课程信息行 */
.course-time,
.course-location,
.course-teacher,
.course-weeks,
.course-note {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 12rpx;
}

.time-text,
.location-text,
.teacher-text,
.weeks-text,
.note-text {
  font-size: 28rpx;
  color: #666;
}

.course-note {
  background-color: #fff9e6;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.note-text {
  color: #ff9500;
  font-size: 26rpx;
}

/* 空状态 */
.empty-schedule {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

/* 周课程统计 */
.week-summary {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.summary-header {
  margin-bottom: 20rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.summary-stats {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #0052d9;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 模态框样式 */
.modal-content {
  padding: 20rpx 0;
}

.detail-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 底部安全区域 */
.safe-area-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
} 