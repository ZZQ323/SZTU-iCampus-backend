/* 课表页面样式 */
.bblank{
  width: 100%;
  height:2vh;
}
.page {
  background: rgb(196, 193, 235);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: env(safe-area-inset-top);
}

/* 头部控制栏 */
.header {
  background: white;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 85vw;
  margin: auto;
  border-radius: 3%;
}

.week-info {
  display: flex;
  flex-direction: column;
}

.week-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.week-subtitle {
  font-size: 24rpx;
  color: #666;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

/* 课表内容 */
.schedule-content {
  flex: 1;
  padding: 20rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

/* 课表网格 */
.schedule-grid {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 星期头部 */
.week-header {
  display: flex;
  background: #0052d9;
  color: white;
}

.time-column {
  width: 120rpx;
  padding: 24rpx 12rpx;
  background: #003eb3;
}

.day-column {
  flex: 1;
  padding: 16rpx 8rpx;
  text-align: center;
  border-left: 1rpx solid rgba(255, 255, 255, 0.2);
}

.day-column.today {
  background: #4a90e2;
}

.day-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.day-date {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 课表网格内容 */
.schedule-grid-content {
  display: flex;
  flex-direction: column;
}

.time-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-row:last-child {
  border-bottom: none;
}

/* 时间单元格 */
.time-cell {
  width: 120rpx;
  padding: 20rpx 12rpx;
  background: #fafafa;
  border-right: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.time-period {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.time-range {
  font-size: 20rpx;
  color: #999;
}

/* 课程单元格 */
.course-cell {
  flex: 1;
  min-height: 120rpx;
  border-left: 1rpx solid #f0f0f0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.course-cell.today {
  background: #f8fbff;
}

/* 课程项 */
.course-item {
  width: 100%;
  height: 100%;
  padding: 12rpx;
  border-radius: 8rpx;
  margin: 4rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.course-item:active {
  transform: scale(0.95);
}

/* 不同类型课程的颜色 */
.course-item.required {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.course-item.elective {
  background: linear-gradient(135deg, #ffecd2, #fcb69f);
  color: #8b4513;
}

.course-item.lab {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  color: #2c3e50;
}

.course-item.practice {
  background: linear-gradient(135deg, #ff9a9e, #fecfef);
  color: #8b1538;
}

.course-name {
  font-size: 22rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.course-location {
  font-size: 18rpx;
  opacity: 0.8;
  margin-bottom: 2rpx;
}

.course-teacher {
  font-size: 18rpx;
  opacity: 0.8;
}

/* 空单元格 */
.empty-cell {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.3;
  transition: all 0.3s ease;
}

.empty-cell:active {
  opacity: 0.6;
  background: #f0f8ff;
}

.add-text {
  font-size: 32rpx;
  color: #ccc;
}

/* 今日课程卡片 */
.today-courses {
  margin-top: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.course-cards {
  white-space: nowrap;
  padding: 0 20rpx;
}

.course-card {
  display: inline-block;
  width: 280rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.course-card:active {
  transform: translateY(-4rpx);
}

.course-card.ongoing {
  border-left: 6rpx solid #52c41a;
}

.course-card.upcoming {
  border-left: 6rpx solid #1890ff;
}

.course-card.finished {
  border-left: 6rpx solid #d9d9d9;
  opacity: 0.7;
}

.card-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.card-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.card-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.card-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  text-align: center;
}

.course-card.ongoing .card-status {
  background: #f6ffed;
  color: #52c41a;
}

.course-card.upcoming .card-status {
  background: #e6f7ff;
  color: #1890ff;
}

.course-card.finished .card-status {
  background: #f5f5f5;
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .course-cell {
    padding: 5rpx 2rpx;
  }
  
  .course-item {
    padding: 8rpx;
    margin: 1rpx;
  }
  
  .course-name {
    font-size: 18rpx;
  }
  
  .course-teacher, .course-location {
    font-size: 16rpx;
  }
}

/* 加载状态 */
.t-loading {
  text-align: center;
  padding: 100rpx;
} 