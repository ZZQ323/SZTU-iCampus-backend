<view class="container">
  <custom-navbar 
    title="课表" 
    background="#4a90e2"
    color="#ffffff"
  />
  
  <view class="schedule-container">
    <t-calendar 
      value="{{currentDate}}" 
      bind:change="onDateChange"
    />
    
    <view class="course-list">
      <view class="section-title">今日课程</view>
      <t-cell-group>
        <t-cell 
          wx:for="{{todayCourses}}" 
          wx:key="id" 
          title="{{item.name}}" 
          note="{{item.time}}"
          description="{{item.location}}"
          hover
          arrow
          bindtap="onViewCourse"
          data-id="{{item.id}}"
        />
      </t-cell-group>
    </view>
  </view>
</view> 