/* 课程编辑器样式 */
.bblank {
  width: 100%;
  height: 10vh;
}

.page {
  background: rgb(196, 193, 235);
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 表单容器 */
.form-container {
  padding: 0 32rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 32rpx 0;
}

/* 表单分区 */
.form-section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.label::after {
  content: '';
  color: #ff4444;
  margin-left: 4rpx;
}

/* 提示文字 */
.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.4;
}

/* TDesign组件样式调整 */
.form-item .t-input {
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
}

.form-item .t-textarea {
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
}

.form-item .t-cell {
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
}

.form-item .t-stepper {
  border-radius: 12rpx;
}

/* 单选按钮组样式 */
.form-item .t-radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.form-item .t-radio {
  flex: none;
  margin-right: 0;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.bottom-actions .t-button {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .form-container {
    padding: 0 24rpx;
  }
  
  .form-section {
    padding: 24rpx;
  }
  
  .bottom-actions {
    padding: 20rpx 24rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  }
}

/* 加载状态 */
.form-item .t-button[loading] {
  opacity: 0.6;
  pointer-events: none;
} 