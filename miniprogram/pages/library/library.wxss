.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.library-container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 20px;
}

.search-section {
  margin-bottom: 24rpx;
}

.search-input {
  background: #ffffff;
  border-radius: 8rpx;
}

.borrow-info {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.info-card {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.info-item {
  text-align: center;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.info-item .value {
  font-size: 40rpx;
  color: #4a90e2;
  font-weight: bold;
}

.borrow-list {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.seat-section {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.floor-selector {
  margin-bottom: 24rpx;
}

.my-reservation {
  margin-top: 24rpx;
}

.recommend-section {
  padding: 16px;
}

.recommend-input {
  margin-bottom: 24rpx;
}

.recommend-button {
  margin-top: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.hot-books {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.book-scroll {
  width: 100%;
  white-space: nowrap;
}

.book-list {
  display: inline-flex;
  padding: 8rpx 0;
}

.book-item {
  display: flex;
  margin: 0 16px 16px;
  padding: 16px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.book-cover {
  position: relative;
  width: 60px;
  height: 80px;
  border-radius: 6px;
  overflow: hidden;
  margin-right: 16px;
  flex-shrink: 0;
}

.book-cover image {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.overdue-badge {
  position: absolute;
  top: 4px;
  right: 4px;
  background: #e34d59;
  color: white;
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 10px;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.book-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
}

.book-author {
  font-size: 14px;
  color: #666;
}

.book-meta {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.meta-item {
  font-size: 12px;
  color: #888;
}

.book-actions {
  display: flex;
  flex: auto;
  flex-direction: row;
  flex-wrap: wrap;
}

.history-list {
  padding: 0 16px;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-title {
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
}

.history-meta {
  font-size: 12px;
  color: #666;
}

.search-bar {
  display: flex;
  gap: 12px;
  margin-bottom: 20px;
}

.search-bar .t-input {
  flex: 1;
}

.book-grid {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.book-card {
  display: flex;
  padding: 16px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.book-card .book-cover {
  width: 80px;
  height: 100px;
  margin-right: 16px;
}

.book-status {
  position: absolute;
  top: 4px;
  left: 4px;
  font-size: 10px;
  padding: 2px 6px;
  border-radius: 10px;
  color: white;
}

.book-status.available {
  background: #00a870;
}

.book-status.borrowed {
  background: #ff9500;
}

.book-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.book-details .book-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
}

.book-details .book-author {
  font-size: 13px;
  color: #666;
}

.book-location {
  font-size: 12px;
  color: #0052d9;
  background: #e7f3ff;
  padding: 2px 8px;
  border-radius: 10px;
  align-self: flex-start;
}

.book-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 8px 0;
}

.rating {
  display: flex;
  align-items: center;
  gap: 4px;
}

.rating-text {
  font-size: 12px;
  color: #666;
}

.borrow-count {
  font-size: 12px;
  color: #666;
}

.new-books-list {
  padding: 0 16px;
}

.new-book-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.new-book-item:last-child {
  border-bottom: none;
}

.new-book-item .book-cover {
  width: 40px;
  height: 50px;
  margin-right: 12px;
}

.new-badge {
  position: absolute;
  top: 2px;
  right: 2px;
  background: #ff6b35;
  color: white;
  font-size: 8px;
  padding: 1px 4px;
  border-radius: 6px;
}

.arrival-date {
  font-size: 12px;
  color: #00a870;
  margin-top: 4px;
}

.seat-overview {
  background: white;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.seat-stats {
  margin-top: 16px;
}

.seat-progress {
  display: flex;
  align-items: center;
  gap: 12px;
}

.progress-bar {
  flex: 1;
  height: 6px;
  background: #f0f0f0;
  border-radius: 3px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #0052d9 0%, #4dabf7 100%);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 12px;
  color: #666;
  white-space: nowrap;
}

.floors-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.floor-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.floor-info {
  flex: 1;
}

.floor-name {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.floor-description {
  font-size: 13px;
  color: #666;
  margin-bottom: 8px;
}

.floor-stats {
  display: flex;
  gap: 16px;
}

.available-seats, .occupancy-rate {
  font-size: 12px;
  color: #888;
}

.floor-indicator {
  display: flex;
  align-items: center;
  gap: 12px;
}

.seats-circle {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
  color: white;
}

.seats-circle.high {
  background: #00a870;
}

.seats-circle.medium {
  background: #ff9500;
}

.seats-circle.low {
  background: #e34d59;
}

.recommend-header {
  background: white;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.recommend-form {
  background: white;
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.recommend-form .t-textarea {
  margin-bottom: 16px;
}

.recommend-tips {
  background: white;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.tips-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.tip-item {
  font-size: 13px;
  color: #666;
  line-height: 1.4;
}

.t-tabs {
  background: white;
}

.t-tab-panel {
  background: #f5f7fa;
  min-height: calc(100vh - 200px);
}

/* 自定义导航栏 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background: white;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.navbar-left, .navbar-right {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 概览卡片 */
.overview-card {
  margin: 16px;
  padding: 20px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.overview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16px;
}

.overview-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.overview-time {
  font-size: 12px;
  color: #666;
}

.overview-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 24px;
  font-weight: bold;
  color: #0052d9;
  line-height: 1;
}

.stat-label {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}

.stat-divider {
  width: 1px;
  height: 30px;
  background: #eee;
}

/* 公告栏 */
.announcement-bar {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  margin: 0 16px 16px;
  background: linear-gradient(135deg, #e7f3ff 0%, #f0f8ff 100%);
  border-radius: 8px;
  border-left: 4px solid #0052d9;
}

.announcement-text {
  margin-left: 8px;
  font-size: 14px;
  color: #0052d9;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 区域标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
  margin: 20px 0 12px;
}

.section-action {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #0052d9;
  gap: 4px;
}

.section-subtitle {
  font-size: 14px;
  color: #666;
  margin-top: 4px;
}

/* 借阅区域 */
.borrow-section {
  padding: 0 0 20px;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 0;
  color: #666;
  gap: 12px;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
  color: #999;
}

.empty-text {
  font-size: 16px;
  margin: 12px 0 4px;
}

.empty-subtitle {
  font-size: 14px;
  color: #ccc;
}

/* 标签页样式调整 */
.t-tabs {
  background: white;
}

.t-tab-panel {
  background: #f5f7fa;
  min-height: calc(100vh - 200px);
} 