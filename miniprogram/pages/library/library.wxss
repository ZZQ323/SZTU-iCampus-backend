.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.library-container {
  padding: 16rpx;
}

.search-box {
  margin-bottom: 24rpx;
}

.quick-functions {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 24rpx 0 16rpx;
}

.book-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.book-author {
  color: #666;
  font-size: 24rpx;
}

.book-due-date {
  color: #0052d9;
  font-size: 24rpx;
}

.library-info {
  margin-top: 24rpx;
} 