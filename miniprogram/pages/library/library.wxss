.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.library-container {
  padding: 24rpx;
}

.search-section {
  margin-bottom: 24rpx;
}

.search-input {
  background: #ffffff;
  border-radius: 8rpx;
}

.borrow-info {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.info-card {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.info-item {
  text-align: center;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.info-item .value {
  font-size: 40rpx;
  color: #4a90e2;
  font-weight: bold;
}

.borrow-list {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.seat-section {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.floor-selector {
  margin-bottom: 24rpx;
}

.my-reservation {
  margin-top: 24rpx;
}

.recommend-section {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
}

.recommend-input {
  margin-bottom: 24rpx;
}

.recommend-button {
  margin-top: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.hot-books {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.book-scroll {
  width: 100%;
  white-space: nowrap;
}

.book-list {
  display: inline-flex;
  padding: 8rpx 0;
}

.book-item {
  width: 200rpx;
  margin-right: 24rpx;
  display: inline-block;
}

.book-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.book-title {
  font-size: 28rpx;
  color: #333;
  margin-top: 8rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

.custom-navbar {
  background: #4a90e2 !important;
} 